<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.lcark.todo.MainActivity"
    android:padding="16dp">

    <Spinner
        android:id="@+id/activity_main_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:entries="@array/days_of_the_week"
        />

    <EditText
        android:id="@+id/activity_main_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/activity_main_day"
        android:textSize="18sp"
        android:hint=""
        android:text=""
        android:gravity="center"
        android:inputType="textCapSentences"
        />
    <LinearLayout
        android:id="@+id/activity_main_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_list"
        style="@android:style/Widget.Holo.Button.Borderless.Small"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/activity_main_yesterday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/activity_main_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Save"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/activity_main_tomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            />
    </LinearLayout>

</RelativeLayout>
